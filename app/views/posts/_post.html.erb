<div id="<%= dom_id post %>">
  <div class="flex flex-wrap justify-center">
    <div class="bg-red-50 shadow-md rounded-lg m-4 p-6 max-w-xs">
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <p><%= image_tag post.post_image.url(:index_size) if post.post_image.present?  %></p>
      <p>
      <%= link_to "look this post", post %>
    </p>
    </div>
  </div>
</div>
